<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="550px"
        android:layout_height="290px"
        android:background="@mipmap/img_orange_frame">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="5px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginRight="5px"
                android:layout_marginTop="25px"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="Shop"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_ec6c00"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34px"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="49px"
                android:layout_marginTop="11px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_shop_rating"
                    android:layout_width="212.5px"
                    android:layout_height="34px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_search_shop_name"
                    android:numStars="5"
                    android:progressDrawable="@drawable/custom_ratingbar"
                    android:rating="3.5"
                    android:stepSize="0.5"/>

                <TextView
                    android:id="@+id/tv_shop_rating"
                    android:layout_width="50px"
                    android:layout_height="match_parent"
                    android:text="2.5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_ec6c00"
                    android:textSize="36sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/tv_good_2"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@mipmap/img_good"/>

                <TextView
                    android:id="@+id/tv_feature_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7px"
                    android:layout_marginRight="5px"
                    android:text="feature1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_ec6c00"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_good_2"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@mipmap/img_good"/>

                <TextView
                    android:id="@+id/tv_feature_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7px"
                    android:layout_marginRight="5px"
                    android:text="feature2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_ec6c00"
                    android:textSize="24sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/shop_goods_total"
                android:id="@+id/tv_goods_total"
                android:textColor="@color/color_9b9b9b"
                android:textSize="12sp"
                android:layout_marginRight="5px"
                android:layout_marginBottom="20px"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>