<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_goods"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="10px"
            android:button="@drawable/selector_cb_check" />

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="120px"
            android:layout_height="120px" />

        <LinearLayout
            android:layout_width="552px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_marginRight="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Goods name"
                android:id="@+id/tv_goods_name"
                android:textColor="@android:color/black"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Goods desc"
                android:id="@+id/tv_goods_desc"
                android:textColor="@color/color_4a4a4a"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_4a4a4a"
            android:textSize="48sp" />

        <RelativeLayout
            android:id="@+id/rl_num_controller"
            android:layout_width="300px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/android_img_btn_backgroung"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px">

            <ImageButton
                android:id="@+id/ibtn_reduce"
                android:layout_width="30px"
                android:layout_height="2px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_reduce" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="48sp" />

            <ImageButton
                android:id="@+id/ibtn_increase"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_increase" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_ec6c00"
            android:textSize="48sp" />

        <Button
            android:layout_width="100px"
            android:layout_height="50px"
            android:text="@string/cart_btn_del"
            android:id="@+id/btn_del"
            android:textColor="@color/color_4a4a4a"
            android:background="@mipmap/btn_selected_default"
            android:layout_marginLeft="30px"
            android:textSize="36sp" />


    </LinearLayout>
</LinearLayout>