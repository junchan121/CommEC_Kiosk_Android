<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_functionbar"
        android:gravity="right"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:layout_marginTop="@dimen/main_tab_top_space"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_national"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_county"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_community"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_shop"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/main_tab_w"
            android:layout_height="@dimen/main_tab_h"
            android:background="@null"/>
    </LinearLayout>

    <include
        layout="@layout/content_community"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>