<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/main_tab_tab_w"
        android:layout_height="@dimen/main_tab_tab_h"
        android:background="@mipmap/img_function_b_g"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/main_tab_logo_w"
            android:layout_height="@dimen/main_tab_logo_h"
            android:layout_marginBottom="@dimen/main_tab_logo_bottom_space"
            android:layout_marginTop="@dimen/main_tab_logo_top_space"
            android:background="@mipmap/img_logo"/>

        <ImageView
            android:id="@+id/separate1"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_main_page"/>

            <Button
                android:id="@+id/btn_home"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv2"
                android:background="@null"
                android:text="@string/main_tab_home"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate2"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_national"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_nation"/>

            <Button
                android:id="@+id/btn_national"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv3"
                android:background="@null"
                android:text="@string/main_tab_national"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate3"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_county"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_country"/>

            <Button
                android:id="@+id/btn_county"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv4"
                android:background="@null"
                android:text="@string/main_tab_county"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate4"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_shop"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_store"/>

            <Button
                android:id="@+id/btn_shop"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv5"
                android:background="@null"
                android:text="@string/main_tab_shop"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate5"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_cart"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_shopping_car"/>

            <Button
                android:id="@+id/btn_cart"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv6"
                android:background="@null"
                android:text="@string/main_tab_cart"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate6"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"
            android:layout_marginBottom="@dimen/main_tab_item_line_tb_space"/>

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="@dimen/main_tab_item_w"
            android:layout_height="@dimen/main_tab_item_h">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_tab_back"/>

            <Button
                android:id="@+id/btn_return"
                android:layout_width="@dimen/main_tab_item_cover_w"
                android:layout_height="@dimen/main_tab_item_cover_h"
                android:layout_toRightOf="@+id/iv7"
                android:background="@null"
                android:text="@string/main_tab_return"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/national_tag_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/separate7"
            android:layout_width="@dimen/main_tab_item_line_w"
            android:layout_height="@dimen/main_tab_item_line_h"
            android:src="@mipmap/img_line_120"
            android:layout_marginTop="@dimen/main_tab_item_line_tb_space"/>
    </LinearLayout>

    <include
        layout="@layout/content_goods_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>